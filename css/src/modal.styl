.ui.modal
  display none
  z-index 123456789
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(0, 0, 0, 0.2)
  background-image url('./img/trans-bg.png')
  background-repeat repeat

  &.open
    display block

  .display-table-cell
    display table-cell

  .vertical-align-middle
    vertical-align middle

  .modal-inner
    display table
    position relative
    margin auto
    opacity 1
    background-color white
    max-width 80%

  .modal-content
    padding 10px

  .close-modal-button
    position absolute
    right 10px
    top 10px
